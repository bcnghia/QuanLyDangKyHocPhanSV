@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using QuanLyDangKyHocPhanSV.Models
@* @model IEnumerable<QuanLyDangKyHocPhanSV.Models.SinhVien>
 *@

@model List<VThongTinDangKyMonHoc>
@{
    ViewData["Title"] = "SinhVienDangKyMonHoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 id="title" class="text-center fw-bold">DashBoard sinh viên đăng ký môn học</h3>
<h6>@TempData["Message"]</h6>
<table class="table" id="datatablesSimple">
    <thead>
        <tr>
            <th>
                Mã sinh viên
            </th>
            <th>
                Tên sinh viên
            </th>
            <th>
                Mã môn học
            </th>
            <th>
                Tên môn học
            </th>
            <th>
                Số tiết
            </th>
            <th>
                Số tín chỉ
            </th>
            <th>
                Thời gian đăng ký
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MaSV
                </td>
                <td>
                    @item.TenSV
                </td>
                <td>
                    @item.MaMH
                </td>
                <td>
                    @item.TenMH
                </td>
                <td>
                    @item.SoTiet
                </td>
                <td>
                    @item.SoTinChi
                </td>
                <td>
                    @item.ThoiGianDangKy
                </td>
                <td>
                    @* <a asp-action="Details" asp-route-id="@item.MaSv">Details</a> | *@
                    <a asp-action="XoaDangKyMon" asp-route-maSV="@item.MaSV" asp-route-maMH="@item.MaMH">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/LayoutAdmin/js/datatables-simple-demo.js"></script> 